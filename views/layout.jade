doctype html
html#ng-app(ng-app="LearnByRead")
	head
		title Readtionary
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js")
		!= js('angular.js')
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.3/angular-animate.js")
		!= js('app.js')
		!= css('bootstrap.css')
		!= css('layout.css')
		block meta
	body
		.container(ng-controller="RootCtrl")
			.navbar.navbar-inverse
				.navbar-header
					button.navbar-toggle(type="type", data-toggle="collapse" data-target="#menu-collapse")
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="/")= t('logo')
				#menu-collapse.collapse.navbar-collapse
					ul.nav.navbar-nav
						li
							a(href="/board")= t('menu.words')
						li
							if user
								a(href="/logout")= t('logout')
							else
								a(href="/login")= t('login')
					ul.nav.navbar-nav.navbar-right
						li
							a(href="/setlang/en?next=#{originalUrl}") English
						li
							a(href="/setlang/cn?next=#{originalUrl}") 简体中文

			
			block content

			#message.col-xs-12.alert(ng-hide="hideMessage", ng-class="{success: 'alert-success', error: 'alert-danger'}[message.status]") {{message.content}}

			#foot 
				ol.breadcrumb
					li.active Powered By 
					li
						a Node.js
					li
						a Wiktionary
					li
						a Bootstrap
					li 
						a Stanford NLP